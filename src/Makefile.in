# @configure_input@
# Package-specific substitution variables
package 	= @PACKAGE_NAME@
version 	= @PACKAGE_VERSION@
tarname 	= @PACKAGE_TARNAME@
distdir 	= $(tarname)-$(version)

# Prefix-specific substitution variables
prefix 		= @prefix@
exec_prefix 	= @exec_prefix@
bindir 		= @bindir@

# VPATH-related substitution variables
srcdir = @srcdir@
VPATH = @srcdir@


CFLAGS		?= -g -O0 -Wall

all: $(package)

includes	= $(wildcard ../include/*.h)
sources		= $(wildcard *.c)

$(package): ${sources} ${includes}
	$(CC) -I. -I$(srcdir) -I.. -I../include `pkg-config --libs --cflags gtk+-2.0` $(CFLAGS) -o $@ ${sources}

Makefile: Makefile.in ../config.status
	cd .. && ./config.status src/$@

../config.status: ../configure
	cd .. && ./config.status --recheck

clean:
	-rm -f $(package) >/dev/null 2>&1
	-rm -f *.o >/dev/null 2>&1
	-rm -f Makefile >/dev/null 2>&1

install:
	install -d $(DESTDIR)$(bindir)
	install -m 0755 $(package) $(DESTDIR)$(bindir)

uninstall:
	-rm $(DESTDIR)$(bindir)/$(package)

.PHONY: all clean install uninstall
